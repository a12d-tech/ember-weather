{{!-- rendered in application.hbs --}}

<div id="cities">
  <div class="row bg-grey">
    <div class="col-md-12">
      {{#if controller.length}}
        <h1>Previous searches</h1>
        <div id="cities-list">
          <ul>
            {{#each city in controller}}
              <li class="city-suggestion">
                <label>
                  {{#link-to 'forecasts' city}}
                    {{city.formatted_location}}
                  {{/link-to}}
                </label>
              </li>
            {{/each}}
          </ul>
        </div>
      {{else}}
        <h1>No search history...</h1>
      {{/if}}
    </div>
  </div>
</div>